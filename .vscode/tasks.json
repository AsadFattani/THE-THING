{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build & Run SFML App",
        "type": "shell",
        "command": "cmd.exe",
        "args": [
          "/c",
          "g++ main.cpp -o sfml-app -IC:/SFML/include -LC:/SFML/lib -lsfml-graphics -lsfml-window -lsfml-audio -lsfml-system && sfml-app.exe"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": []
      }
    ]
  }
  